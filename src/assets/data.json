              }
            ]
          },
          {
            "file": "sticky-commit-lines/script.js",
            "changes": [
              {
                "type": "+",
                "line": 1,
                "content": "// since commit range is 500px"
              },
              {
                "type": "+",
                "line": 2,
                "content": "window.onwheel = (event) => {"
              },
              {
                "type": "+",
                "line": 3,
                "content": "    const isScrollingDown = Math.sign(event.wheelDeltaY);"
              },
              {
                "type": "+",
                "line": 4,
                "content": "    if (isScrollingDown != 0)"
              },
              {
                "type": "+",
                "line": 5,
                "content": "        document.querySelector('.lineBoard')"
              },
              {
                "type": "+",
                "line": 6,
                "content": "            .scrollLeft += event.deltaY > 0 ? 500 : -500;"
              },
              {
                "type": "+",
                "line": 7,
                "content": "}"
              }
            ]
          }
        ]
      },
